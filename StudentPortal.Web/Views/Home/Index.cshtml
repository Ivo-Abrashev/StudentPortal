@{
    ViewData["Title"] = "Welcome";
}

<style>
    body {
        background: linear-gradient(to right, #fff0e5, #fcefe3);
    }

    .welcome-container {
        background-color: #ffffffcc;
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        max-width: 800px;
        margin: auto;
    }

    .btn-warm-primary {
        background-color: #f4a261;
        color: white;
        border: none;
    }

        .btn-warm-primary:hover {
            background-color: #e76f51;
        }

    .btn-warm-outline {
        border: 2px solid #f4a261;
        color: #f4a261;
    }

        .btn-warm-outline:hover {
            background-color: #f4a261;
            color: white;
        }
</style>

<div class="text-center mt-5 welcome-container">
    <h1 class="display-4 fw-bold text-primary">Welcome to Student Portal</h1>
    <p class="lead mt-3">Manage your students easily and effectively.</p>

    <img src="https://cdn-icons-png.flaticon.com/512/3135/3135755.png" alt="Students" style="width:150px; margin: 30px 0;">

    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
        <a href="/Students/List" class="btn btn-warm-primary btn-lg px-4 me-sm-3">View All Students</a>
        <a href="/Students/Add" class="btn btn-warm-outline btn-lg px-4">Add New Student</a>
    </div>

    <div class="mt-5">
        <p class="text-muted">Built with ❤️ using ASP.NET Core MVC</p>
    </div>
</div>